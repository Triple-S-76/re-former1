<h1>Edit User</h1>

<br><br>
<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <br><br>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <br><br>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <br><br>
  <div>
    <%= form.submit "Edit User" %>
  </div>
<% end %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saves </h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
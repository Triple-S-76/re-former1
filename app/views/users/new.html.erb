<br><br>
<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <br><br>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <br><br>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <br><br>
  <div>
    <%= form.submit "Create User" %>
  </div>
<% end %>

